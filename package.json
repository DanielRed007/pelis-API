{
  "name": "basic-server-nodejs-typescript",
  "version": "1.0.0",
  "description": "nodejs typescript server snippet",
  "main": "server.ts",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "tsc"
  },
  "author": "th7 design studio",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^12.19.8",
    "eslint": "^6.5.1",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^1.19.3",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@types/express": "^4.17.1",
    "@types/mongoose": "^5.10.2",
    "express": "^4.17.1",
    "mongoose": "^5.11.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
